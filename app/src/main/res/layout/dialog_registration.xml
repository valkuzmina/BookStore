<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/registration_email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:hint="E-mail"/>
    <EditText
        android:id="@+id/registration_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/registration_email_input"
        android:singleLine="true"
        android:hint="Пароль"/>
    <EditText
        android:id="@+id/registration_password_input_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/registration_password_input"
        android:singleLine="true"
        android:hint="Подтвердите пароль"/>
    <EditText
        android:id="@+id/registration_phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/registration_patronymic_input"
        android:singleLine="true"
        android:inputType="phone"
        android:maxLength="13"
        android:hint="Телефон"/>
    <EditText
        android:id="@+id/registration_firstname_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/registration_password_input_confirm"
        android:singleLine="true"
        android:hint="Имя"/>
    <EditText
        android:id="@+id/registration_lastname_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/registration_firstname_input"
        android:singleLine="true"
        android:hint="Фамилия"/>
    <EditText
        android:id="@+id/registration_patronymic_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/registration_lastname_input"
        android:singleLine="true"
        android:hint="Отчество"/>

    <Button
        android:id="@+id/registration_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/registration_phone_input"
        android:layout_centerHorizontal="true"
        android:text="ЗАРЕГИСТРИРОВАТЬСЯ"/>
</RelativeLayout>